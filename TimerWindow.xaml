<Window x:Class="PaintNight.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintNight"
        mc:Ignorable="d"
        Title="Paint Night - Timer" Height="150" Width="350"
        Loaded="Window_Loaded" Background="#FF4F4F4F" Icon="Resources/icon.png" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lblTimer" Content="Label" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFD8D8D8" FontSize="22">
            <Label.Effect>
                <DropShadowEffect Direction="250" RenderingBias="Quality" ShadowDepth="4" BlurRadius="7"/>
            </Label.Effect>
        </Label>

    </Grid>
</Window>
